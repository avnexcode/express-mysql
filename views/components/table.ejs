<div class="overflow-x-auto">
    <table class="table">
        <thead>
            <tr>
                <th>NO</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% if (users?.length > 0) { %>
                <% users.forEach((user, i) => { %>
                    <tr class="hover">
                        <th><%= i + 1 %></th>
                        <th><%= user.name %></th>
                        <th><%= user.email %></th>
                        <th><%= user.phone %></th>
                        <th><a href="/dashboard/<%= user.id %>" class="btn btn-info btn-xs">Info</a></th>
                    </tr>
                <% }) %>
            <% } else { %>
                <th colspan="5" class="text-center"><span class="text-xl font-bold">Kosong</span></th>
            <% } %>
        </tbody>
    </table>
</div>