<div class="absolute top-0 left-0 p-5">
    <a href="/dashboard" class="text-xl">Back</a>
</div>
<% if (typeof(errors) !== 'undefined') { %>
    <div class="px-10 pt-20 flex flex-col gap-2">
            <% errors.forEach(error => { %>
                <div role="alert" class="alert alert-error">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span><%= error.msg %></span>
                </div>
            <% }) %>
    </div>
<% } %>
<div class="w-full flex justify-center mt-20 h-screen">
    <div class="w-[600px]">
        <%- include('./components/form.ejs', [user || null]) %>
    </div>
</div>